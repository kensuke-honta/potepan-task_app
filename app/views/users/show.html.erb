<h3>スケジュール詳細</h3>

<table>
    <tr>
      <th>タイトル</th>
      <td><%= @user.title  %></td>
    </tr>
    <tr>
      <th>開始日</th>
      <td><%= @user.start_at %></td>
    </tr>
    <tr>
      <th>投稿日時</th>
      <td><%= @user.created_at.to_s(:datetime_jp) %></td>
    </tr>
    <tr>
      <th>終日</th>
      <td><% if @user.all_day %>
           ○
         <% end %></td>
    </tr>
    <tr>
      <th>スケジュールメモ</th>
      <td><%= @user.memo %></td>
      
    </tr>
  </table>


<div>
   <ul>
     <li><%= link_to "ユーザー情報一覧に戻る", :users %></li>
     <li><%= link_to "スケジュールを編集する", "http://localhost:3000/users/1/edit" %></li>
     <li>
        <%= link_to "スケジュールを削除する", @user, method: :delete, data: { confirm: "本当に削除しますか？" } %>
     </li>   
   </ul>
 </div>